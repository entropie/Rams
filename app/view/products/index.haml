%div{:class => "column width1 first"}
  //%h1 Produkte und Produktgruppen
  %div{:id => :pgroup, :class => ""}
    %ul
      - @product_groups.sort_by{|p| p.name}.each do |pgroup|
        %li
          %a{:title => "Produktg.: #{pgroup.name}", :class => "alink#{@target_id == pgroup.id ? ' active' : ''}", :href => ProductsController.r(:index, :product, pgroup.id)}= pgroup.name
- if @products
  = render_view :products, :products => @products
