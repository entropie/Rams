  %body
    %div{:id => :top, :class => "width8"}
      %div{:class => "column width4 first"}
        %div{:id => :toplinks}
          %ul
            %li
              %a{:href => "#{PageController.r(:dashboard)}", :rel => :history, :title => "Dashboard", :class => "alink"}
                = Icon(:clipboard, "foo", 32, :green)            
                Dashboard 
            %li
              %a{:href => "#{UserController.r(:index)}", :rel => :history, :title => "Kontakte", :class => "alink"}
                = Icon(:hers, "foo", 32, :green)
                Kontakte
            %li
              %a{:href => "#{ProductsController.r(:index)}", :rel => :history, :title => "Produkte", :class => "alink"}
                = Icon(:atomic, "foo", 32, :green) 
                Produkte
            %li
              %a{:href => "#{LocationController.r(:index)}", :rel => :history, :title => "Orte", :class => "alink"}
                = Icon(:radio, "foo", 32, :green)
                Orte
    %div{:class => "column width1 first"}
      %div{:id => "search"}
        %input{:type => :text, :name => :s}
            
    %div{:class => "column width6", :style => "height:44px"}
      %ul{:id => :history_inc}
              
    %div{:id => :mid, :class => "column first width6"}
      %div{:class => "column width1 first", :id => :sidebar}
        %div{:class => "", :id => :sidebar_content}
      %div{:class => "column width3"}
        %div{:id => :content}
          = @content
